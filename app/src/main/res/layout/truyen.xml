<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".DocSach">
    <android.support.constraint.utils.ImageFilterView
        android:id="@+id/imageViewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"></android.support.constraint.utils.ImageFilterView>
    <TextView
        android:textColor="#ff00"
        android:layout_marginTop="10dp"
        android:textSize="24sp" android:id="@+id/textViewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewHinh"
        android:text="Name"></TextView>
    <TextView
        android:text="Description"
        android:textColor="#ff00"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:layout_below="@id/textViewTen"
        android:layout_toRightOf="@id/imageViewHinh"
        android:id="@+id/textViewMota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"> </TextView>
</RelativeLayout>